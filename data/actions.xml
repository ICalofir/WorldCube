<this.Actions>
  <Action name="drink" time="5-10" item="drink">
    <this.InfoMessages>
      <InfoMessage time="0.0" message="%NAME% started drinking %QUANTITY% litre(s) of %ITEM%."/>
      <InfoMessage time="1.0" message="%NAME% finished drinking."/>
    </this.InfoMessages>
    <this.Effects>
      <Effect name="thirst" delta="-5"/>
      <Effect name="bladder" delta="3" delay="2"/>
    </this.Effects>
  </Action>
	<Action name="sleep" time="0-0">
		<this.InfoMessages>
			<InfoMessage time="0.0" message="%NAME% went to sleep."/>
			<InfoMessage time="1.0" message="%NAME% has awoken."/>
		</this.InfoMessages>
		<this.Effects>
			<Effect name="energy" delta="5.5"/>
			<Effect name="bladder" delta="0.5"/>
		</this.Effects>
	</Action>
</this.Actions>
